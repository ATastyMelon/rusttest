MEMORY {
    BOOT2 : ORIGIN = 0x10000000, LENGTH = 0x100
    FLASH : ORIGIN = 0x10000100, LENGTH = 512K
    PAYLOAD : ORIGIN = ORIGIN(FLASH) + LENGTH(FLASH), LENGTH = 2048K - LENGTH(FLASH) - 0x100
    RAM : ORIGIN = 0x20000000, LENGTH = 256K
}

EXTERN(BOOT2_FIRMWARE)

SECTIONS {
    .boot2 ORIGIN(BOOT2) :
    {
        KEEP(*(.boot2));
    } > BOOT2
} INSERT BEFORE .text;

__PAYLOAD = ORIGIN(PAYLOAD);
__PAYLOAD_END = __PAYLOAD + LENGTH(PAYLOAD);